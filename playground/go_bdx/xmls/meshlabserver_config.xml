<!DOCTYPE FilterScript>
<FilterScript>
  <filter name="Simplification: Quadric Edge Collapse Decimation">
    <Param name="TargetFaceNum" value="5000" type="RichInt"/> <!-- Target number of faces -->
    <Param name="TargetPerc" value="0.5" type="RichFloat"/> <!-- Percentage of faces to keep -->
    <Param name="QualityThr" value="0.3" type="RichFloat"/> <!-- Quality threshold (0.1-1.0) -->
    <Param name="PreserveBoundary" value="1" type="RichBool"/> <!-- Preserve boundary edges -->
    <Param name="PreserveNormal" value="1" type="RichBool"/> <!-- Preserve normals -->
    <Param name="PreserveTopology" value="1" type="RichBool"/> <!-- Preserve topology -->
    <Param name="OptimalPlacement" value="0" type="RichBool"/> <!-- Enable optimal vertex placement -->
    <Param name="PlanarSimplification" value="0" type="RichBool"/> <!-- Keep planar regions -->
  </filter>
</FilterScript>
